{
  "name": "hands-and-fire-chat-be",
  "version": "1.2.0",
  "description": "TypeScript Node.js backend for Twilio messaging",
  "author": "",
  "license": "ISC",
  "main": "dist/index.js",
  "keywords": [],
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "NODE_ENV=test vitest run",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src",
    "clean": "rimraf dist",
    "prepare": "husky",
    "embeddings:build": "tsc -p embeddings/tsconfig.json",
    "embeddings:start": "npm run embeddings:build && node embeddings/dist/index.js",
    "embeddings:dev": "tsx embeddings/src/index.ts",
    "embeddings:drop-local-db": "npm run embeddings:build && node embeddings/dist/dropLocalDb.js",
    "embeddings:drop-local-db:dev": "tsx embeddings/src/dropLocalDb.ts",
    "embeddings:docker-up": "docker run -p 8000:8000 chromadb/chroma",
    "db:start": "bash scripts/run-local-chroma.sh",
    "db:stop": "docker stop chroma-local",
    "db:logs": "docker logs -f chroma-local",
    "test:openai-db": "RUN_OPENAI_PROD_TEST=true NODE_ENV=test vitest run tests/prod/openaiWithDb.prod.test.ts",
    "test:openai-single": "RUN_OPENAI_PROD_TEST=true NODE_ENV=test vitest run tests/prod/openai.prod.test.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.679.0",
    "@chroma-core/default-embed": "^0.1.8",
    "@fastify/formbody": "^8.0.2",
    "chromadb": "^3.1.1",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.1",
    "googleapis": "^142.0.0",
    "openai": "^6.7.0",
    "pino": "^8.20.0",
    "tiktoken": "^1.0.22",
    "twilio": "^5.10.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@types/tap": "^15.0.12",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "pino-pretty": "^11.2.2",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^2.1.1"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
